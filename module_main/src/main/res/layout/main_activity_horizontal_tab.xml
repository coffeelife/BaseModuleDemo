<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.wss.common.widget.PagerSlidingTabStrip
        android:id="@+id/pst_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:pstsBold="true"
        app:pstsHasTopLine="false"
        app:pstsIndicatorColor="@color/blue"
        app:pstsIndicatorHeight="1.5dp"
        app:pstsShouldExpand="true"
        app:pstsTextDefaultColor="@color/black"
        app:pstsTextSelectedColor="@color/blue"
        app:pstsTextSize="14sp"
        app:pstsUnderlineColor="@color/gray"
        app:pstsUnderlineHeight="1px" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
